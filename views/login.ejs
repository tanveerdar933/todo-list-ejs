<%-include("htmlHeader")-%>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-5">
      <div class="heading">
        <h2>Login Form</h2>
      </div>
      <form id="loginForm" class="mt-5 text-center" action="/api/user/login" method="POST">
        <div class="form-group mt-2">
          <label for="email" class="form-label visually-hidden">Email</label>
          <input class="form-control" type="email" id="email" placeholder="fake@example.com" name="email">
          <small class="form-text text-muted text-left visually-hidden">required</small>
        </div>
        <div class="form-group mt-2">
          <label for="password" class="form-label visually-hidden">Password</label>
          <input class="form-control" type="password" id="password" placeholder="Password" name="password">
          <small class="form-text text-muted text-left visually-hidden">required</small>
        </div>
        <button class="btn btn-success w-25 mt-3" type="submit" form="loginForm">Login</button>
      </form>
    </div>
  </div>
</div>
<%-include("htmlFooter")-%>